<h1>Edit Photo <%= @the_id %></h1>
        <form action="/update_photo/<%= @an_id%>">
            <div>
                <label for="source_input">
                Image URL
                </label>

                <input id="source_input" type="text" name="the_source" value="<%= @the_source %>">
            </div>

            <div>
                <label for="caption_input">
                Caption
                </label>

                <input id="caption_input" type="text" name="the_caption" value="<%= @the_caption %>">
            </div>

            <button>
                Update Photo
            </button>
        </form>